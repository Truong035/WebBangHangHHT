<!--================Single Product Area =================-->
<div class="product_image_area">
    <div class="container">
        <div class="row s_product_inner">
            <div class="col-lg-6">
                <div class="s_Product_carousel">
                    <div class="single-prd-item">
                        <img class="img-fluid" src="@Model.image" alt="">
                    </div>
                    @foreach (var item in Model.Imgs)
                    {
                        <div class="single-prd-item">
                            <img class="img-fluid" src="@item.Url" alt="">
                        </div>
                    }
                </div>
            </div>
            <div class="col-lg-5 offset-lg-1">
                <div class="s_product_text">
                    <h3>@Model.name</h3>
                    <h2>@Model.price.Value.ToString("N0")</h2>
                    <ul class="list">
                        <li><a class="active" href="#"><span>Danh mục </span> : @Model.Categorie.display_name</a></li>
                        <li><a href="#"><span>Số lượng còn</span> : @Model.stock</a></li>
                    </ul>
                    <form method="get" action="/Home/AddCart/@Model.Id">
                        <div class="product_count">
                            <label for="qty">Số lượng:</label>
                            <input type="text" name="quantity" required id="sst" maxlength="12" value="1" title="Quantity:" class="input-text qty">
                            <button onclick="var result = document.getElementById('sst'); var sst = result.value; if( !isNaN( sst )) result.value++;return false;"
                                    class="increase items-count" type="button">
                                <i class="lnr lnr-chevron-up"></i>
                            </button>
                            <button onclick="var result = document.getElementById('sst'); var sst = result.value; if( !isNaN( sst ) &amp;&amp; sst > 0 ) result.value--;return false;"
                                    class="reduced items-count" type="button">
                                <i class="lnr lnr-chevron-down"></i>
                            </button>
                        </div>

                        <div class="product_count">
                            <label for="qty">Kích thước:</label>
                            <br />
                            @foreach (var item in Model.Option_Product)
                            {

                                <label for="qtys">  <input required  value="@item.Id" type="radio"  name="Option" class="input-text"> @item.option</label>
                            }


                        </div>

                        <div class="card_area d-flex align-items-center">
                            <button type="submit" class="primary-btn">Add to Cart</button>
                            <a class="icon_btn" href="#"><i class="lnr lnr lnr-diamond"></i></a>
                            <a class="icon_btn" href="#"><i class="lnr lnr lnr-heart"></i></a>
                        </div>
                    </form>

                </div>
            </div>
        </div>
        <br />

    </div>
</div>
<!--================End Single Product Area =================-->
